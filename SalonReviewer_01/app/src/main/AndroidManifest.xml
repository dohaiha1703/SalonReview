<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.gotosalon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/image_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/image_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.login.LoginActivity" />
        <activity
            android:name=".screen.home.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".screen.signup.SignUpActivity" />
        <activity android:name=".screen.detail.DetailActivity" />
        <activity
            android:name=".screen.manager.ManagerActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".screen.publish.PublishActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".screen.update.UpdateActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>